<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_invoice_form" model="ir.ui.view">
        <field name="name">school.invoice.form</field>
        <field name="model">school.invoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label for="name"/>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="parent_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="payment_date"/>
                                <field name="due_date"/>
                            </group>
                        </group>
                    </div>
                    <notebook>
                        <page name="product_info" string="Order Lines">
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="sale_order_id"/>
                                    <field name="invoice_id"/>
                                    <field name="product_type"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_value h2" readonly="1"/>
                            </group>
                        </page>    
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">school.invoice.tree</field>
        <field name="model">school.invoice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="due_date"/>
            </tree>
        </field>
    </record>



    <!-- ACTION -->
    <record id="action_school_invoice" model="ir.actions.act_window">
        <field name="name">Our Invoices</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.invoice</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new invoice !  
            </p>
        </field>
    </record>

