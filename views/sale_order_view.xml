<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">school.saleorder.form</field>
        <field name="model">school.saleorder</field>
        <field name="arch" type="xml">
            <form string="Item Sale Order">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_paid" string="Mark as Paid" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_draft" string="Set to draft" type="object" class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" class="oe-link"
                            attrs="{'invisible': [('state', 'in', ['paid', 'cancelled'])]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="from_parent_form" invisible="1"/>
                        <field name="parent_id" attrs="{'readonly': [('from_parent_form', '=', True)]}"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_lines_ids">
                                <tree editable="bottom">
                                    <field name="item_type"/>
                                    <field name="item_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="amount_total" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_value h2"/>
                            </group> 
                        </page>
                        <page string="Other Infos">
                            <group>
                                <field name="currency_id"/>
                            </group>
                        </page>
                    </notebook>   
                </sheet>
                <!--<footer>
                    <group>
                        <field name="amount_total"/>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                        <button name="action_paid" type="object" string="Mark as Paid" class="btn-success"/>
                    </group>
                </footer>-->
                
            </form>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_sale_order_tree" model="ir.ui.view">
        <field name="name">school.saleorder.tree</field>
        <field name="model">school.saleorder</field>
        <field name="arch" type="xml">
            <tree string="Item Sale Orders" decoration-info="state == 'confirmed'"
                                            decoration-success="state == 'paid'"
                                            decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>



    <!-- SALE ORDER ACTION -->
    <record id="action_school_sale_order" model="ir.actions.act_window">
        <field name="name">Our Sale Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.saleorder</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain"></field>
        <field name="context"></field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sale order !  
            </p>
        </field>
    </record>

</odoo>